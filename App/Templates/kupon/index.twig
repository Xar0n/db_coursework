{# index.twig #}
{% extends "layoutMain.twig" %}
{% block title %} Купоны {% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block actKupon %}active{% endblock %}
{% block content %}
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Купоны</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <a type="button" class="btn btn-sm btn-primary" href="/kupon/add">Добавить</a>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>Номер</th>
                    <th>Билет</th>
                    <th>Клиент</th>
                    <th>Пункт посадки</th>
                    <th>Пункт высадки</th>
                    <th>Тариф</th>
                    <th>Действия</th>
                </tr>
                </thead>
                <tbody>
                {% if kupons %}
                    {% for kupon in kupons%}
                        <tr>
                            <td>{{ kupon.id }}</td>
                            <td>{{ kupon.nomer_bileta }}</td>
                            <td>{{ kupon.nomer_i_seriya_pasporta_klienta }}</td>
                            <td>{{ kupon.nunkt_posadki }}</td>
                            <td>{{ kupon.nunkt_vysadki }}</td>
                            <td>{{ kupon.tarif }}</td>
                            <td>
                                <div class="btn-group">
                                    <a class="nav-link" href="/kupon/edit/?id={{ kupon.id }}">
                                        <span data-feather="edit"></span>
                                    </a>
                                    <a class="nav-link" href="/kupon/delete/?id={{ kupon.id }}">
                                        <span data-feather="x-square"></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}