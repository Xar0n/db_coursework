{# listClientsOnDate.twig #}
{% extends "layoutMain.twig" %}
{% block title %} Отчет {% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Список клиентов авиакомпаний на заданную дату</h1>
        </div>
        <form method="post">
            <div class="mb-3 col-lg-4">
                <label for="FormControlData" class="form-label">Дата продажи</label>
                <input type="date" name="data_prodazhi" class="form-control" id="FormControlData" required>
            </div>
            <button type="input" name="save" class="btn btn-primary">Показать</button>
        </form>
        {% if klients %}
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>Серия и номер паспорта</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчетство</th>
                    <th>Авиакомпания</th>
                    <th>Пункт посадки</th>
                    <th>Пункт высадки</th>
                    <th>Тип</th>
                    <th>Дата продажи</th>
                </tr>
                </thead>
                <tbody>
                    {% for klient in klients %}
                        <tr>
                            <td>{{ klient.nomer_i_seriya_pasporta }}</td>
                            <td>{{ klient.familiya }}</td>
                            <td>{{ klient.imya }}</td>
                            <td>{{ klient.otchestvo }}</td>
                            <td>{{ klient.shifr_aviakompanii }} | {{ klient.nazvanie }}; {{ klient.naselennyj_punkt }},
                                {{ klient.ulica }}, {{ klient.nomer_doma }}, {{ klient.ofis }}</td>
                            <td>{{ klient.nunkt_posadki }}</td>
                            <td>{{ klient.nunkt_vysadki }}</td>
                            <td>{{ klient.tip }}</td>
                            <td>{{ klient.data_prodazhi }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}
    </main>
{% endblock %}