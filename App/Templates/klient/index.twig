{# index.twig #}
{% extends "layoutMain.twig" %}
{% block title %} Клиенты {% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block actKlient %}active{% endblock %}
{% block content %}
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Клиенты</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <a type="button" class="btn btn-sm btn-primary" href="/klient/add">Добавить</a>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>Серия и номер паспорта</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Действия</th>
                </tr>
                </thead>
                <tbody>
                {% if klients %}
                    {% for klient in klients%}
                        <tr>
                            <td>{{ klient.nomer_i_seriya_pasporta }}</td>
                            <td>{{ klient.familiya }}</td>
                            <td>{{ klient.imya }}</td>
                            <td>{{ klient.otchestvo }}</td>
                            <td>
                                <div class="btn-group">
                                    <a class="nav-link" href="/klient/edit/?id={{ klient.id }}">
                                        <span data-feather="edit"></span>
                                    </a>
                                    <a class="nav-link" href="/klient/delete/?id={{ klient.id }}">
                                        <span data-feather="x-square"></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}